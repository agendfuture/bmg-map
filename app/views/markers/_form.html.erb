<%= form_with(model: marker, local: true) do |form| %>
  <% if marker.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(marker.errors.count, "error") %> prohibited this marker from being saved:</h2>

      <ul>
      <% marker.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.text_field :name, id: :marker_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :description, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.text_area :description, id: :marker_description, class: "form-control", style: "min-height:100px;" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :company_ids, "Immobilienhai", class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.collection_select :company_ids, Company.order(:name), :id, :name, {include_blank: true}, {multiple: false, class: "form-control"} %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit nil, class: "btn btn-primary" %>
  </div>
<% end %>
